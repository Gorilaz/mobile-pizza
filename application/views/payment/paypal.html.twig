{% extends 'layout.html.twig' %}

{% block content %}
<form name="_xclick" action="https://www.paypal.com/cgi-bin/webscr" method="post" id="form" data-ajax="false">
    <input type="hidden" name="cmd" value="_xclick">
    <input type="hidden" name="business" value="{{ user.email }}">
    <input type="hidden" name="currency_code" value="USD">
    <input type="hidden" name="item_name" value="Pizza">
    <input type="hidden" name="amount" value="{{ total }}">
    <input type="hidden" name="first_name" value="{{ user.first_name }}">
    <input type="hidden" name="last_name" value="{{ user.last_name }}">
    <input type="hidden" name="address1" value="{{ user.address }}">
    <input type="hidden" name="item_number" value="{{ orderId }}">
    <input type="hidden" name="cancel_return" value="{{ base_url }}paypal/cancel">
    <input type="hidden" name="return" value="{{ base_url }}paypal/succes">
    <input type="hidden" name="notify_url" value="http%3A%2F%2Fm2.pizzaboy.y11.in%2Fipn">
    {#<input type="hidden" name="shipping" value="1.00">#}
    {#<input type="hidden" name="tax" value="2.00">#}
    {#<input type="image" src="http://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif" id="pay" border="0" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">#}
</form>

    <div data-role="content">
        <h2>Redirecting to paypay. Please wait...</h2>
    </div>

<script type="text/javascript">
    $(function(){
        $('#form').submit();
    });

</script>
{% endblock %}